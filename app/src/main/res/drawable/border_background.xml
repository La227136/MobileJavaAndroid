<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- État sélectionné -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#47294d "/>  <!-- Couleur or lorsque sélectionné -->
            <corners android:radius="8dp" /> <!-- Coins arrondis -->
            <stroke android:width="2dp" android:color="#313332" /> <!-- Bordure -->
        </shape>
    </item>

    <!-- État normal -->
    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>  <!-- Couleur blanche lorsque non sélectionné -->
            <corners android:radius="8dp" />
            <stroke android:width="2dp" android:color="#CCCCCC" /> <!-- Bordure grise -->
        </shape>
    </item>
</selector>
