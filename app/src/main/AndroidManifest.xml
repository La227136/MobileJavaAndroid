<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.gestionpoints">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GestionPoints"
        tools:targetApi="31">
        <activity
            android:name=".controllers.PointsActivity.DisplayGradeOfStudentActivity"
            android:exported="false" />
        <activity
            android:name=".controllers.PointsActivity.StudentListForALearningActivity"
            android:exported="false" />
        <activity
            android:name=".controllers.PromotionsActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controllers.SettingsActivity.LearningActivitiesSettingsActivity"
            android:exported="true" />
        <activity
            android:name=".controllers.PointsActivity.LearningActivitiesPointsActivity"
            android:exported="true" />
        <activity
            android:name=".controllers.SettingsActivity.EvaluationsSettingsActivity"
            android:exported="true" />
        <activity
            android:name=".controllers.Fragments.StudentActivity.StudentActivity"
            android:exported="true" />
    </application>

</manifest>