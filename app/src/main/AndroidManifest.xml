<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.gestionpoints">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GestionPoints"
        tools:targetApi="31">
        <activity
            android:name=".controllers.promotionActivity.PromotionsActivity"
            android:exported="true">
            <!-- Intent filter c'est pour désigner le point d'entrée de l'app -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controllers.gradeActivities.GradeStudentEvaluationsActivity"
            android:exported="false" />
        <activity
            android:name=".controllers.gradeActivities.GradeStudentListActivity"
            android:exported="false" />

        <activity
            android:name=".controllers.settingsActivity.SettingsLearningActivitiesActivity"
            android:exported="false" />
        <activity
            android:name=".controllers.gradeActivities.GradeLearningActivitiesActivity"

            android:exported="false" />
        <activity
            android:name=".controllers.settingsActivity.SettingsEvaluationsActivity"
            android:exported="false" />
        <activity
            android:name=".controllers.addStudentsActivity.AddStudentsActivity"
            android:exported="false" />
    </application>

</manifest>